<%- include('../partials/html-head') %>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Karla:wght@519&family=Source+Sans+Pro:wght@400;700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<link rel="stylesheet" href="/stylesheets/selfprofile.css">

<%- include('../partials/nav') %>

  <% if (profile.avatar) { %>
    <div>
      <img 
        src="<%= profile.avatar %>" 
        alt="<%= profile.name %> avatar"
      >
      <% } %>
      <h1><%= profile.name %>'s Profile</h1>
    </div>
<container>
    <% if (characters.length) { %>
      <table>
        <thead>
          <tr>
            <th id="name">Name:</th>
            <th id="race">Race:</th>
            <th id="class">Class</th>
          </tr>
        </thead>
        <% characters.forEach(c => { %>
      </tbody>
      <tr>
        <td id="name"><%= c.name %></td>
        <td id="race"><%= c.race %></td>
        <td id="class"><%= c.class %></td>
        <td>
          <a href="/characters/<%= c._id %>">Details</a>
        </td>
      </tr>
      <% }) %>
      <% } else { %>
        <h2>No Characters Yet :(</h2>
        <% } %> 
      </table>
      </container>

<%- include('../partials/footer') %>